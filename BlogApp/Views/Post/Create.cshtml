@model BlogApp.Models.PostCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.PostId" />
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <input asp-for="Post.Content" class="form-control" />
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="esh-catalog-label" data-title="brand">
                   Blog 
                    <select asp-for="@Model.Post.BlogId" asp-items="@Model.Blogs" class="esh-catalog-filter"></select>
                </label>
                <span asp-validation-for="Post.BlogId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="esh-catalog-label" data-title="brand">
                   Category
                    <select asp-for="@Model.Post.PostCategoryId" asp-items="@Model.Categories" class="esh-catalog-filter"></select>
                </label>
                <span asp-validation-for="Post.PostCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
